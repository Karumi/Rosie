<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="CharacterName">
    <item name="android:textSize">@dimen/character_name_font_size</item>
    <item name="android:textColor">@color/character_name</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginLeft">@dimen/character_margin_left</item>
  </style>

</resources>
